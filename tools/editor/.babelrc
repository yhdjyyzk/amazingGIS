{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-react"
  ],
  "plugins": [
    "static-fs",
    "react-hot-loader/babel",
    "@babel/plugin-proposal-class-properties",
    "@babel/transform-runtime"
  ],
  "env": {
    "test": {
      "plugins": [
        ["istanbul", {
          "exclude": ["node_modules/**", "test/**"]
        }]
      ]
    }
  }
}
